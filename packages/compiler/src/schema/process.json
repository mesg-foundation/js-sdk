{
  "$id": "process-schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "steps"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "key": {
      "type": "string"
    },
    "steps": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "#/definitions/trigger"
          },
          {
            "$ref": "#/definitions/filter"
          },
          {
            "$ref": "#/definitions/task"
          }
        ]
      }
    }
  },
  "definitions": {
    "hash": {
      "type": "string",
      "pattern": "^[123456789ABCDEFGHJKLMNPQRSTUVWXYZabcdefghijkmnopqrstuvwxyz]+$"
    },
    "instance": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "instanceHash"
          ],
          "properties": {
            "instanceHash": {
              "$ref": "#/definitions/hash"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "instance"
          ],
          "properties": {
            "instance": {
              "oneOf": [
                {
                  "type": "object",
                  "required": [
                    "src"
                  ],
                  "properties": {
                    "src": {
                      "type": "string"
                    }
                  }
                },
                {
                  "type": "object",
                  "required": [
                    "service"
                  ],
                  "properties": {
                    "service": {
                      "$ref": "#/definitions/hash"
                    }
                  }
                }
              ],
              "properties": {
                "env": {
                  "type": "array",
                  "uniqueItems": true,
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      ]
    },
    "step": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "key": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "trigger",
            "filter",
            "task"
          ]
        }
      }
    },
    "value": {
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "number"
        },
        {
          "type": "string"
        },
        {
          "type": "null"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/value"
          }
        },
        {
          "anyOf": [
            {
              "type": "object",
              "required": [
                "key"
              ],
              "properties": {
                "key": {
                  "type": "string"
                },
                "stepKey": {
                  "type": "string"
                }
              }
            },
            {
              "type": "object",
              "patternProperties": {
                "^[a-zA-Z0-9_]+$": {
                  "$ref": "#/definitions/value"
                }
              }
            }
          ]
        }
      ]
    },
    "inputs": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": {
          "$ref": "#/definitions/value"
        }
      }
    },
    "trigger": {
      "allOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "trigger"
              ]
            }
          }
        },
        {
          "$ref": "#/definitions/step"
        },
        {
          "$ref": "#/definitions/instance"
        },
        {
          "oneOf": [
            {
              "type": "object",
              "required": [
                "eventKey"
              ],
              "properties": {
                "eventKey": {
                  "type": "string"
                }
              }
            },
            {
              "type": "object",
              "required": [
                "taskKey"
              ],
              "properties": {
                "taskKey": {
                  "type": "string"
                }
              }
            }
          ]
        }
      ]
    },
    "task": {
      "allOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "task"
              ]
            }
          }
        },
        {
          "$ref": "#/definitions/step"
        },
        {
          "$ref": "#/definitions/instance"
        },
        {
          "type": "object",
          "required": [
            "taskKey"
          ],
          "properties": {
            "taskKey": {
              "type": "string"
            },
            "inputs": {
              "$ref": "#/definitions/inputs"
            }
          }
        }
      ]
    },
    "filter": {
      "allOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "filter"
              ]
            }
          }
        },
        {
          "$ref": "#/definitions/step"
        },
        {
          "type": "object",
          "required": [
            "conditions"
          ],
          "properties": {
            "conditions": {
              "oneOf": [
                {
                  "type": "object",
                  "additionalProperties": false,
                  "patternProperties": {
                    "^[a-zA-Z0-9_]+$": {
                      "anyOf": [
                        {
                          "type": "string"
                        },
                        {
                          "type": "number"
                        },
                        {
                          "type": "boolean"
                        },
                        {
                          "type": "null"
                        }
                      ]
                    }
                  }
                },
                {
                  "type": "array",
                  "uniqueItems": true,
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "key": {
                        "type": "string"
                      },
                      "predicate": {
                        "type": "string",
                        "enum": [
                          "EQ",
                          "GT",
                          "GTE",
                          "LT",
                          "LTE",
                          "CONTAINS"
                        ]
                      },
                      "value": {
                        "anyOf": [
                          {
                            "type": "string"
                          },
                          {
                            "type": "number"
                          },
                          {
                            "type": "boolean"
                          },
                          {
                            "type": "null"
                          }
                        ]
                      }
                    }
                  }
                }
              ]
            }
          }
        }
      ]
    }
  }
}