{
  "name": "@mesg/compiler",
  "version": "0.1.0",
  "description": "MESG Compiler",
  "main": "lib/index",
  "types": "lib/index",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "ts-node ./node_modules/tape/bin/tape src/**/*_test.ts",
    "build": "npm run clean && npm run compile",
    "postbuild": "copyfiles -f src/schema/* lib/schema",
    "clean": "rm -rf ./lib && rm -rf tsconfig.tsbuildinfo",
    "compile": "tsc -b tsconfig.json",
    "precompile": "json2ts src/schema/process.json > src/schema/process.d.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mesg-foundation/js-sdk.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mesg-foundation/js-sdk/issues"
  },
  "homepage": "https://github.com/mesg-foundation/js-sdk#readme",
  "dependencies": {
    "@mesg/api": "^0.2.0",
    "ajv": "^6.10.2",
    "js-yaml": "^3.13.1",
    "lodash.pick": "^4.4.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^3.12.1",
    "@types/lodash.pick": "^4.4.6",
    "@types/long": "^4.0.0",
    "@types/sinon": "^7.5.1",
    "@types/tape": "^4.2.33",
    "copyfiles": "^2.1.1",
    "json-schema-to-typescript": "^8.0.0",
    "sinon": "^7.5.0",
    "tape": "^4.11.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "files": [
    "/lib",
    "/npm-shrinkwrap.json"
  ]
}